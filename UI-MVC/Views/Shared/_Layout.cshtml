<!DOCTYPE html>
<html ng-app="sussol">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <base href="/" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--Angular scripts-->
    <script type="text/javascript" src="~/Scripts/angular.min.js"></script>
    <script type="text/javascript" src="~/Scripts/angular-route.min.js"></script>
    <script type="text/javascript" src="~/Scripts/angular-messages.min.js"></script>
    <!--Controllers-->
    <script type="text/javascript" src="~/Scripts/Controllers/app.js"></script>
    <script type="text/javascript" src="~/Scripts/Controllers/AccountController.js"></script>
    <script type="text/javascript" src="~/Scripts/Controllers/LoginController.js"></script>
    <script type="text/javascript" src="~/Scripts/Controllers/UploadController.js"></script>
    <script type="text/javascript" src="~/Scripts/Controllers/AccountHomeController.js"></script>
   
</head>
<body>
<nav id="topNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand page-scroll" href="/"><img src="~/Content/Images/logonegative.png" alt="logo"/></a>
            </div>
            <div class="navbar-collapse collapse" id="bs-navbar">
                <ul class="nav navbar-nav">
                    <li>
                        <a class="page-scroll" href="#one">Algorithms</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#two">How it works</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#three">About</a>
                    </li>
                    
                    
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li ng-show="username!==undefined">
                        <a href="#">My Dashboard</a>
                    </li>
                    
                    <li>
                        <a href="#" data-toggle="modal" data-target="#login-modal" ng-show="username===undefined">Log in</a>
                        <a href="/account/{{username}}" ng-show="username!==undefined">{{username}}</a>
                    </li>
                    <li ng-controller="LoginController as login">
                         <a href="/" ng-click="logOut()"  ng-show="username!==undefined">Log out</a>
                    </li>

                    
                </ul>
            </div>
        </div>
    
    </nav>
    
        
        @RenderBody()

    <div id="three" class="footer bg-primary">
        <div class="container">
            <div class="row p-b">
                <div class="col-md-3 col-sm-6 footer-widget wow fadeInUp" data-wow-duration="1s" data-wow-delay=".5s">
                    <div class="logo"><img src="~/Content/Images/logonegative.png" alt="logo" /></div>
                    <p class="copyright">
                        &copy; 2016 Sustainable Solvents. <br>All Rights Reserved. <br>Designed by J. Jordan & L. Boeckx <br>Students Karel de Grote Hogeschool Antwerp <br>
                        Images: <a target="_blank" href="http://unsplash.com/">Shutterstock</a>, <a target="_blank" href="http://pexels.com/">Splitshire</a>
                    </p>
                </div>
                <div class="col-md-3 col-sm-6 footer-widget wow fadeInUp" data-wow-duration="1s" data-wow-delay=".8s">
                    <h3>Company</h3>
                    <ul class="links">
                        <li><a href="#">How it Works</a></li>
                        <li><a href="#">Services</a></li>
                        <li><a href="#">Products</a></li>
                        <li><a href="#">Careers</a></li>
                        <li><a href="#">Blog</a></li>
                        <li><a href="#">Contact</a></li>
                    </ul>
                </div>
                <div class="clearfix visible-sm-block"></div>
                <div class="col-md-3 col-sm-6 footer-widget wow fadeInUp" data-wow-duration="1s" data-wow-delay="1.1s">
                    <h3>Connect</h3>
                    <ul class="links">
                        <li><a href="#">Facebook</a></li>
                        <li><a href="#">Twitter</a></li>
                        <li><a href="#">Dribbble</a></li>
                        <li><a href="#">Instagram</a></li>
                    </ul>
                </div>
                <div class="col-md-3 col-sm-6 footer-widget wow fadeInUp" data-wow-duration="1s" data-wow-delay="1.4s">
                    <h3>About</h3>
                    <p>This project is the thesis of two final year students at Karel de Grote - Hogeschool Antwerp. This project was made during an internship at QFrame. QFrame is the best choice in .NET solutions.</p>
                    
                </div>
                <div class="clearfix visible-sm-block"></div>
            </div>
            <div class="row made">
                <div class="col-md-12 wow fadeInUp" data-wow-duration="1s" data-wow-delay=".5s">
                    <p>Made with so much  <i class="fa fa-heart" style="color: #E74C3C"></i>  by Jonah and Lennart.</p>
                </div>
            </div>
        </div>
    </div>
    <!-- END footer -->
    

<div ng-controller="LoginController as login" class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="login-dialog">
            <div class="loginmodal-container">
                <h1>Login to your account</h1><br>
                <form>
                    {{errorlogin}}
                    <input type="text" name="user" placeholder="Username" ng-model="login.email" required>
                    <input type="password" name="pass" placeholder="Password" ng-model="login.password" required>
                    <input type="submit" name="login" class="login loginmodal-submit" value="Login" ng-click="logIn(login.email, login.password)">
                </form>
    
                <div class="login-help">
                    <a href="/register" ng-click="closeModal()">Register</a> - <a href="#" ng-click="closeModal()">Forgot Password</a>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
<script src="//cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.js"></script>
<script>
    new WOW().init();
</script>



    
</body>
</html>
